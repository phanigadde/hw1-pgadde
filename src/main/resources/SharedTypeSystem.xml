<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>SharedTypeSystem</name>
  <description>A sharede type system for the NER pipeline. Has a Sentence and a Gene type.</description>
  <version>1.0</version>
  <vendor>Phani Gadde</vendor>
  <types>
    <typeDescription>
      <name>Sentence</name>
      <description>Something that represents a sentence and its ID</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>id</name>
          <description>Something that holds the ID</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>text</name>
          <description>The text of the sentence</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>Gene</name>
      <description>The Gene Chunk</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>content</name>
          <description>The content of the Gene</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
